{
  "name": "lytovka.com",
  "version": "1.0.0",
  "description": "My personal site",
  "author": "Ivan Lytovka <ivanlytovka@gmail.com> (https://github.com/lytovka)",
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lytovka/lytovka.com.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/app.css",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/app.css",
    "setup:generate": "prisma generate",
    "start": "remix-serve api/index.js",
    "postinstall": "remix setup node",
    "lint": "eslint --max-warnings 0 --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "4.5.0",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/server-runtime": "^1.15.0",
    "@remix-run/vercel": "1.15.0",
    "clsx": "^1.2.1",
    "date-fns": "2.29.3",
    "dotenv": "16.0.3",
    "gray-matter": "^4.0.3",
    "marked": "^4.2.12",
    "prisma": "4.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-draggable": "4.4.5",
    "remix": "1.15.0"
  },
  "devDependencies": {
    "@lytovka/eslint-config": "^1.3.0",
    "@remix-run/dev": "1.15.0",
    "@remix-run/serve": "1.15.0",
    "@tailwindcss/typography": "0.5.9",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/eslint": "8.37.0",
    "@types/marked": "4.0.8",
    "@types/react": "18.0.38",
    "@types/react-dom": "18.0.11",
    "@types/spotify-api": "^0.0.21",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-c8": "0.30.1",
    "autoprefixer": "10.4.14",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "happy-dom": "8.9.0",
    "husky": "^8.0.2",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "tailwindcss": "3.3.1",
    "typescript": "4.9.5",
    "vite-tsconfig-paths": "3.6.0",
    "vitest": "0.30.1"
  }
}
