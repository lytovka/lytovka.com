{
  "name": "lytovka.com",
  "version": "1.0.0",
  "description": "My personal site",
  "author": "Ivan Lytovka <ivanlytovka@gmail.com> (https://github.com/lytovka)",
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lytovka/lytovka.com.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/app.css",
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/app.css",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:css\" \"remix dev\"",
    "format": "prettier --write .",
    "lint:fix": "eslint --fix .",
    "lint": "eslint --max-warnings 0 --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "postinstall": "remix setup node",
    "prepare": "husky install",
    "start": "remix-serve api/index.js",
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "typecheck": "tsc --build"
  },
  "dependencies": {
    "@remix-run/node": "^1.16.0",
    "@remix-run/react": "^1.16.0",
    "@remix-run/server-runtime": "^1.16.0",
    "@remix-run/vercel": "1.16.0",
    "clsx": "^1.2.1",
    "date-fns": "2.30.0",
    "dotenv": "16.3.1",
    "gray-matter": "^4.0.3",
    "ioredis": "^5.3.2",
    "marked": "^5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-draggable": "4.4.5",
    "remix": "^1.16.0"
  },
  "devDependencies": {
    "@lytovka/eslint-config": "^1.3.0",
    "@remix-run/dev": "1.16.0",
    "@remix-run/serve": "1.16.0",
    "@tailwindcss/typography": "0.5.9",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@types/eslint": "8.44.0",
    "@types/marked": "5.0.0",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/spotify-api": "^0.0.22",
    "@vitejs/plugin-react": "4.0.3",
    "@vitest/coverage-c8": "0.31.1",
    "autoprefixer": "10.4.14",
    "concurrently": "8.2.0",
    "cross-env": "7.0.3",
    "eslint": "8.44.0",
    "eslint-config-prettier": "8.8.0",
    "happy-dom": "10.1.1",
    "husky": "^8.0.2",
    "postcss": "8.4.25",
    "prettier": "3.0.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.6",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.31.1"
  }
}
