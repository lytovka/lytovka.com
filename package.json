{
  "name": "lytovka.com",
  "version": "1.0.0",
  "description": "My personal site",
  "author": "Ivan Lytovka <ivanlytovka@gmail.com> (https://github.com/lytovka)",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lytovka/lytovka.com.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "prisma generate && remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:fix": "eslint --fix .",
    "lint": "eslint --max-warnings 0 --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "typecheck": "tsc --build"
  },
  "dependencies": {
    "@libsql/client": "0.5.6",
    "@lytovka/draggable": "^0.0.8",
    "@prisma/adapter-libsql": "^6.1.0",
    "@prisma/client": "^6.1.0",
    "@remix-run/dev": "^2.15.2",
    "@remix-run/node": "^2.15.2",
    "@remix-run/react": "^2.15.2",
    "@remix-run/serve": "^2.15.2",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "@tanstack/react-table": "^8.20.6",
    "@vercel/remix": "^2.15.2",
    "clsx": "^2.1.1",
    "dotenv": "16.4.7",
    "gray-matter": "^4.0.3",
    "isbot": "^5.1.19",
    "lucide-react": "^0.469.0",
    "marked": "^15.0.4",
    "mdx-bundler": "^10.0.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^5.0.12",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@lytovka/eslint-config": "^1.4.1",
    "@tailwindcss/typography": "0.5.16",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@types/eslint": "8.56.12",
    "@types/marked": "6.0.0",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "10.4.20",
    "concurrently": "9.1.2",
    "cross-env": "7.0.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "happy-dom": "16.7.3",
    "husky": "^9.1.7",
    "postcss": "8.5.1",
    "postcss-import": "^16.1.0",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "tailwindcss": "3.4.17",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.8"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  }
}
