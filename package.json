{
  "name": "lytovka.com",
  "version": "1.0.0",
  "description": "My personal site",
  "author": "Ivan Lytovka <ivanlytovka@gmail.com> (https://github.com/lytovka)",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lytovka/lytovka.com.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "prisma generate && remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:fix": "eslint --fix .",
    "lint": "eslint --max-warnings 0 --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "typecheck": "tsc --build"
  },
  "dependencies": {
    "@libsql/client": "0.5.6",
    "@lytovka/draggable": "^0.0.8",
    "@prisma/adapter-libsql": "^5.14.0",
    "@prisma/client": "^5.14.0",
    "@remix-run/dev": "2.10.3",
    "@remix-run/node": "2.10.3",
    "@remix-run/react": "2.10.3",
    "@remix-run/serve": "2.10.3",
    "@spotify/web-api-ts-sdk": "^1.1.2",
    "@tanstack/react-table": "^8.13.2",
    "@vercel/remix": "2.10.3",
    "clsx": "^2.1.0",
    "dotenv": "16.4.5",
    "gray-matter": "^4.0.3",
    "isbot": "^5.0.0",
    "lucide-react": "^0.395.0",
    "marked": "^13.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^5.0.12",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@lytovka/eslint-config": "^1.4.1",
    "@tailwindcss/typography": "0.5.15",
    "@testing-library/jest-dom": "6.4.8",
    "@testing-library/react": "16.0.0",
    "@types/eslint": "8.56.12",
    "@types/marked": "6.0.0",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.3.2",
    "@vitest/coverage-v8": "^1.1.0",
    "autoprefixer": "10.4.20",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "happy-dom": "14.12.3",
    "husky": "^9.0.0",
    "postcss": "8.4.47",
    "postcss-import": "^16.0.0",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "tailwindcss": "3.4.13",
    "typescript": "5.6.3",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  }
}
