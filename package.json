{
  "name": "remix-app-template",
  "private": true,
  "description": "My personal site",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/app.css",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/app.css",
    "setup:generate": "prisma generate",
    "start": "remix-serve api/index.js",
    "postinstall": "remix setup node",
    "lint": "eslint --max-warnings 0 --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --build"
  },
  "dependencies": {
    "@prisma/client": "4.5.0",
    "@remix-run/react": "1.7.3",
    "@remix-run/vercel": "1.7.3",
    "date-fns": "2.29.3",
    "dotenv": "16.0.3",
    "marked": "4.1.1",
    "parse-md": "3.0.3",
    "prisma": "4.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-draggable": "4.4.5",
    "remix": "1.7.3"
  },
  "devDependencies": {
    "@remix-run/dev": "1.7.3",
    "@remix-run/eslint-config": "1.7.3",
    "@remix-run/serve": "1.7.3",
    "@tailwindcss/typography": "0.5.7",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/eslint": "8.4.7",
    "@types/marked": "4.0.7",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.1.0",
    "@vitest/coverage-c8": "0.24.3",
    "autoprefixer": "10.4.12",
    "concurrently": "7.4.0",
    "cross-env": "7.0.3",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "happy-dom": "7.6.0",
    "postcss": "8.4.18",
    "prettier": "2.7.1",
    "tailwindcss": "3.2.1",
    "typescript": "4.8.4",
    "vite-tsconfig-paths": "3.5.2",
    "vitest": "0.24.3"
  }
}
